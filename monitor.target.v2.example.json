{
  "$schema": "./schemas/monitor.target.v2.schema.json",
  "configVersion": 2,
  "id": "bridge",
  "title": "Bridge",
  "refreshSeconds": 1.0,
  "status": {
    "timeoutSeconds": 10.0
  },
  "control": {
    "mode": "ipc",
    "endpoint": "127.0.0.1:8765",
    "appId": "bridge",
    "timeoutSeconds": 8.0,
    "jobPollMs": 200,
    "jobTimeoutSeconds": 120.0
  },
  "ui": {
    "tabs": [
      {
        "id": "status",
        "title": "Status",
        "widgets": [
          {
            "type": "kv",
            "title": "Status",
            "items": [
              {
                "label": "App",
                "jsonpath": "$.appTitle"
              },
              {
                "label": "Running",
                "jsonpath": "$.running"
              },
              {
                "label": "Host",
                "jsonpath": "$.hostRunning"
              }
            ]
          }
        ]
      },
      {
        "id": "config",
        "title": "Config",
        "widgets": [
          {
            "type": "config_file_select",
            "title": "Profile",
            "showAction": "config_show",
            "setAction": "config_set",
            "key": "profile",
            "pathKey": "profilePath"
          },
          {
            "type": "config_editor",
            "title": "Settings",
            "showAction": "config_show",
            "setAction": "config_set",
            "pathKey": "profilePath",
            "settableOnly": true
          }
        ]
      },
      {
        "id": "actions",
        "title": "Actions",
        "widgets": [
          {
            "type": "action_select",
            "title": "Actions"
          },
          {
            "type": "action_output",
            "title": "Output"
          }
        ]
      },
      {
        "id": "logs",
        "title": "Logs",
        "widgets": [
          {
            "type": "text_block",
            "title": "Logs",
            "text": "Add log stream mappings in app repo target files."
          }
        ]
      }
    ]
  }
}
